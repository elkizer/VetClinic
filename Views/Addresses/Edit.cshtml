    </div>
</div>

<div>
    <a asp-controller="Clients" asp-action="Details" asp-route-id="@Model.PersonId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

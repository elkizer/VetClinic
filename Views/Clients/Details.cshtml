@model VetClinic.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonAddresses)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PersonAddresses.Count > 0)
            {
                foreach (var item in Model.PersonAddresses)
                {
                    <div>
                        @Html.DisplayFor(modelItem => item.AddressLine1) @Html.DisplayFor(modelItem => item.AddressLine2), @Html.DisplayFor(modelItem => item.City) @Html.DisplayFor(modelItem => item.State) @Html.DisplayFor(modelItem => item.PostalCode)
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">No addresses on file for this client.</div>
            }
        <div class="float-right"><a class="btn btn-sm btn-primary" asp-controller="Address" asp-action="Create"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonPhones)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PersonPhones.Count > 0)
            {
                foreach (var item in Model.PersonPhones)
                {
                    <div>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">No phone numbers on file for this client.</div>
            }
            <div class="float-right"><a class="btn btn-sm btn-primary" asp-controller="" asp-action="Create"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonEmails)
        </dt>
        <dd class="col-sm-10">
            @if (Model.PersonEmails.Count > 0)
            {
                foreach (var item in Model.PersonEmails)
                {
                    <div>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">No email addresses on file for this client.</div>
            }
            <div class="float-right"><a class="btn btn-sm btn-primary" asp-controller="" asp-action="Create"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2 mt-5">
            @Html.DisplayNameFor(model => model.ClientAnimals)
        </dt>
        <dd class="col-sm-10 mt-5">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Birth Date</th>
                    <th>Species</th>
                    <th>Notes</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ClientAnimals)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Species.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Notes)
                </td>
                <td>
                    <a asp-controller="Animals" asp-action="Edit" asp-route-id="@item.AnimalId">Edit</a> |
                    <a asp-controller="Animals" asp-action="Delete" asp-route-id="@item.AnimalId">Delete</a>
                </td>
            </tr>
                }
            </table>
            <div class="float-right"><a class="btn btn-sm btn-primary" asp-controller="Animals" asp-action="Create"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PersonId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@model VetClinic.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)<span class="float-right"><a asp-action="Edit" asp-route-id="@Model.PersonId">Edit</a></span>
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PersonAddresses)
        </dt>
        <dd class="col-sm-10 mt-3">
            @if (Model.PersonAddresses.Count > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Street Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Postal Code</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PersonAddresses)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AddressLine1) @Html.DisplayFor(modelItem => item.AddressLine2)</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td>@Html.DisplayFor(modelItem => item.State)</td>
                                <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                                <td>
                                    <a asp-controller="Addresses" asp-action="Edit" asp-route-id="@item.PersonAddressId">Edit</a> |
                                    <a asp-controller="Addresses" asp-action="Delete" asp-route-id="@item.PersonAddressId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No addresses on file for this client.</div>
            }
            <div class="w-100 clearfix"><a class="btn btn-sm btn-primary float-right" asp-controller="Addresses" asp-action="Create" asp-route-personid="@Model.PersonId"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PersonPhones)
        </dt>
        <dd class="col-sm-10 mt-3">
            @if (Model.PersonPhones.Count > 0)
            {
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PersonPhones)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>
                                <a asp-controller="Phones" asp-action="Edit" asp-route-id="@item.PersonPhoneId">Edit</a> |
                                <a asp-controller="Phones" asp-action="Delete" asp-route-id="@item.PersonPhoneId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <div class="alert alert-info">No phone numbers on file for this client.</div>
            }
        <div class="w-100 clearfix"><a class="btn btn-sm btn-primary float-right" asp-controller="Phones" asp-action="Create" asp-route-personid="@Model.PersonId"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PersonEmails)
        </dt>
        <dd class="col-sm-10 mt-3">
            @if (Model.PersonEmails.Count > 0)
            {
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Email Addresses</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PersonEmails)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                            <td>
                                <a asp-controller="Emails" asp-action="Edit" asp-route-id="@item.PersonEmailId">Edit</a> |
                                <a asp-controller="Emails" asp-action="Delete" asp-route-id="@item.PersonEmailId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <div class="alert alert-info">No email addresses on file for this client.</div>
            }
        <div class="w-100 clearfix"><a class="btn btn-sm btn-primary float-right" asp-controller="Emails" asp-action="Create" asp-route-personid="@Model.PersonId"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
        <dt class="col-sm-2 mt-5">
            @Html.DisplayNameFor(model => model.ClientAnimals)
        </dt>
        <dd class="col-sm-10 mt-5">
            @if (Model.ClientAnimals.Count() > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Birth Date</th>
                            <th>Species</th>
                            <th>Notes</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ClientAnimals)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BirthDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Species.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    <a asp-controller="ClientAnimals" asp-action="Edit" asp-route-id="@item.ClientAnimalId">Edit</a> |
                                    <a asp-controller="ClientAnimals" asp-action="Delete" asp-route-id="@item.ClientAnimalId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No pets on file for this client.</div>
            }
        <div class="w-100 clearfix"><a class="btn btn-sm btn-primary float-right" asp-controller="ClientAnimals" asp-action="Create" asp-route-personid="@Model.PersonId"><i class="fas fa-plus pr-1"></i>Add</a></div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@model IEnumerable<VetClinic.Models.PersonEmail>

@{
    ViewData["Title"] = "Index";
}

<h1>Emails</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonEmailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonEmailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonEmailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

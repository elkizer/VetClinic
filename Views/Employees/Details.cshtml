@model VetClinic.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Model.HireDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeType.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)<span class="float-right"><a asp-action="Edit" asp-route-id="@Model.PersonId">Edit</a></span>
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.PersonAddresses)
        </dt>
        <dd class="col-sm-10 mt-3">
            @if (Model.PersonAddresses.Count > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Street Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Postal Code</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PersonAddresses)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AddressLine1) @Html.DisplayFor(modelItem => item.AddressLine2)</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td>@Html.DisplayFor(modelItem => item.State)</td>
                                <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No addresses on file for this employee.</div>
            }
            
        </dd>
        <dt class="col-sm-2 mt-3">
            Contact Info
        </dt>
        <dd class="col-sm-10 mt-3">
            @if (Model.PersonPhones.Count > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Phone Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PersonPhones)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No phone numbers on file for this employee.</div>
            }

            @if (Model.PersonEmails.Count > 0)
            {
                <table class="table table-sm table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Email Addresses</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PersonEmails)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No email addresses on file for this employee.</div>
            } 
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

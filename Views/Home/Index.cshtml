@{
    ViewData["Title"] = "Welcome";
}


<div class="row">
    <div class="col-sm-12 mb-5">
        <img class="mx-auto d-block" src="~/images/pets-banner.jpg" />
    </div>
</div>

<div class="container mt-2">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-dark text-white">
                    <div class="d-flex align-items-center">
                        <span class="mx-auto w-100 display-1"><i class="fas fa-user ml-auto"></i></span>

                    </div>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-warning btn-lg btn-block">Add Clients</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-dark text-white">
                    <div class="d-flex align-items-center">
                        <span class="mx-auto w-100 display-1"><i class="fas fa-dog ml-auto"></i></span>

                    </div>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-warning btn-lg btn-block">Add Pets</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-dark text-white">
                    <div class="d-flex align-items-center">
                        <span class="mx-auto w-100 display-1"><i class="far fa-calendar-alt ml-auto"></i></span>

                    </div>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-warning btn-lg btn-block">Schedule Appointments</button>
                </div>
            </div>
        </div>
    </div>
</div>


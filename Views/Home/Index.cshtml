@{
    ViewData["Title"] = "Welcome";
}


<div class="row">
    <div class="col-sm-12">
        <img class="mx-auto d-block img-fluid" src="~/images/4198540.jpg" style="max-height:500px;" />
    </div>
    <div class="col-sm-12 mt-5">
        <div class="row">
            <div class="col-sm-4 mt-3">
                <div class="card">
                    <div class="card-header text-center">
                        <div class="d-flex align-items-center">
                            <span class="mx-auto w-100 display-4"><i class="far fa-calendar-alt ml-auto"></i></span>

                        </div>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-primary btn-block" asp-area="" asp-controller="Appointments" asp-action="Index">Current Appointments</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-4 mt-3">
                <div class="card">
                    <div class="card-header text-center">
                        <div class="d-flex align-items-center">
                            <span class="mx-auto w-100 display-4"><i class="fas fa-user ml-auto"></i></span>

                        </div>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-primary btn-block" asp-area="" asp-controller="Clients" asp-action="Create">Add Clients</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-4 mt-3">
                <div class="card">
                    <div class="card-header text-center">
                        <div class="d-flex align-items-center">
                            <span class="mx-auto w-100 display-4"><i class="far fa-calendar-alt ml-auto"></i></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-primary btn-block" asp-area="" asp-controller="Appointments" asp-action="Create">Add Appointments</a>
                    </div>
                </div>
            </div>
        </div>




    </div>
</div>

